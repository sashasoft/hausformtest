<%= form_for @element do |f| %>
 
  <p>
    <strong><%= @element.name %></strong>
  </p>
 
 <p>
    Цена:<%= f.text_field :price %>
  </p>
  
   
 <p>
    Название:<%= f.text_field :name %>
  </p>
  
  <p>
    Метка:<%= f.text_field :label %>
  </p>
  
  <p>
    <%= submit_tag "Сохранить" %>
  </p>
<% end %>
